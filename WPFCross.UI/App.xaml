<mvx:MvxApplication x:Class="WPFCross.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:System;assembly=mscorlib"
             xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf">
    
    <mvx:MvxApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
                <ResourceDictionary Source="/Resources/Styles.xaml" />
                <ResourceDictionary Source="/Resources/Fonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <core:Double x:Key="MainWindowHeight">500</core:Double>
            <core:Double x:Key="MainWindowWidth">400</core:Double>
            <Thickness x:Key="DefaultMargin">5</Thickness>
            <Thickness x:Key="DefaultPadding">5</Thickness>
        </ResourceDictionary>
    </mvx:MvxApplication.Resources>
    
</mvx:MvxApplication>
